<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidMigrapay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash screen theme -->
    <style name="MigrapayTheme" parent="Theme.AndroidMigrapay">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="SearchViewStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/search_icon_color</item> <!-- Color for the search icon -->
    </style>

</resources>